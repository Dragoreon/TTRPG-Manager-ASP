@model List<Campana>

<section class="title-section">
    <h1>Campañas</h1>
    <div class="search-bar">
        <form>
            <input type="text" name="search" placeholder="Buscar"/>
            <input type="submit" value="Buscar" class="btn btn-secondary"/>
        </form>
    </div>
</section>
<p>
    <a asp-action="Create">Crear</a>
</p>

<section class="campana-list card-list">
    <div class="list">
        @foreach (var campana in Model)
        {
            <a asp-action="detail" asp-route-id="@campana.Id">
                <div class="card align-content-start justify-content-end">
                    <h2>@Html.DisplayFor(mbox => campana.Nombre)</h2>
                    @if (campana.EnProceso)
                    {
                        <p class="green">En proceso</p>
                    }
                    else
                    {
                        <p>Terminada</p>
                    }
                </div>
            </a>
        }
    </div>
</section>
<style>
    .title-section{
        display:flex;
        align-content: center;
        justify-content: space-between;
    }
    .title-section .search-bar{
            align-content: center;
    }

    h2 {
        font-size: 1.2rem;
    }

    .list {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
    }

    .card {
        height: 230px;
        width: 260px;
        padding: 10px;
        border-radius: 16px;
    }

    a {
        text-decoration: none;
        color: black;
    }

    .green {
        color: #126C45;
    }
</style>
